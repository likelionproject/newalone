
<link href="/css/jquery-ui.css" rel="stylesheet">
<link href="/css/datepicker.css" rel="stylesheet">
<script>
    $(document.body).attr("class", "notransition");
</script>

<!-- Header -->
<div id="header">
    <div class="logo">
        <a href="/">
            <span class="fa fa-home marker"></span>
            <span class="logoText">홈</span>
        </a>
    </div>
    <a href="#" class="navHandler"><span class="fa fa-bars"></span></a>
    
    <!--맨위 검색바 시작-->
    <div class="search">
        <span class="searchIcon icon-magnifier"></span>
        <input type="text" name="search" placeholder="장소 검색">
        
    </div>
    <!--맨위 검색바 끝-->
    
    <!--맨위에 알람하고 사용자 설정-->
    <div class="headerUserWraper">
        <a href="#" class="userHandler dropdown-toggle" data-toggle="dropdown"><span class="icon-user"></span><span class="counter">5</span></a>
        <a href="#" class="headerUser dropdown-toggle" data-toggle="dropdown">
            <img class="avatar headerAvatar pull-left" src="/images/avatar-1.png" alt="avatar">
            <div class="userTop pull-left">
                <span class="headerUserName">사용자 이름</span> <span class="fa fa-angle-down"></span>
            </div>
            <div class="clearfix"></div>
        </a>
        <div class="dropdown-menu pull-right userMenu" role="menu">
            <div class="mobAvatar">
                <img class="avatar mobAvatarImg" src="/images/avatar-1.png" alt="avatar">
                <div class="mobAvatarName">사용자 이름</div>
            </div>
            <ul>
                <li><a href="#"><span class="icon-settings"></span>설정</a></li>
                <li><a href="profile.html"><span class="icon-user"></span>프로필</a></li>
                <li class="divider"></li>
                <li><a href="#"><span class="icon-power"></span>로그아웃</a></li>
            </ul>
        </div>
    </div>
    <!--맨위에 알람하고 사용자 설정 끝-->
    
    <!--맨위 알림 토글 다운-->
    <div class="headerNotifyWraper">
        <a href="#" class="headerNotify dropdown-toggle" data-toggle="dropdown">
            <span class="notifyIcon icon-bell"></span>
            <span class="counter">5</span>
        </a>
        <div class="dropdown-menu pull-right notifyMenu" role="menu">
            <div class="notifyHeader">
                <span>알림</span>
                <a href="#" class="notifySettings icon-settings"></a>
                <div class="clearfix"></div>
            </div>
            <ul class="notifyList">
                <li>
                    <a href="#">
                        <div class="notifyRound notifyRound-yellow fa fa-heart-o"></div>
                        <div class="pulse border-yellow"></div>
                        <div class="notify pull-left">
                            <div class="notifyName">관심아티스트 누구누구 공연입니다</div>
                            <div class="notifyTime">2 시간 후</div>
                        </div>
                        <div class="clearfix"></div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <div class="notifyRound notifyRound-yellow fa fa-heart-o"></div>
                        <div class="pulse border-yellow"></div>
                        <div class="notify pull-left">
                            <div class="notifyName">관심아티스트 누구누구 공연입니다</div>
                            <div class="notifyTime">2 시간 후</div>
                        </div>
                        <div class="clearfix"></div>
                    </a>
                </li>
            </ul>
            <a href="#" class="notifyAll">모두 보기</a>
        </div>
    </div>
    <a href="#" class="mapHandler"><span class="icon-map"></span></a>
    <div class="clearfix"></div>
</div>
<!--맨위에 사용자 알람 토글다운 끝-->
     
         <!--왼쪽 사이드바 설정 시작 -->
<div id="leftSide">
    <nav class="leftNav scrollable">
        <div class="search">
            <span class="searchIcon icon-magnifier"></span>
            <input type="text" placeholder="장소 검색">
            <div class="clearfix"></div>
        </div>
        <ul>
            <li><a href="/culture/explore"><span class="navIcon icon-compass"></span><span class="navLabel">공연<br>모아보기</span></a></li>
            <li><a href="/culture/pfadd"><span class="navIcon icon-home"></span><span class="navLabel">공연자<br>모아보기</span></a></li>
            
            <% unless current_user.nil? %>
                <% unless current_user.typenum == 0 %>
                    <li><a href="/culture/add"><span class="navIcon icon-plus"></span><span class="navLabel">공연 등록</span></a></li>
                    <li><a href="/culture/pfupload"><span class="navIcon icon-link"></span><span class="navLabel">공연자 등록</span></a></li>
                <% end %>
            <% end %>
            
        </ul>
    </nav>
</div>

<div class="closeLeftSide"></div>
<!--왼쪽 사이드바 설정 끝-->


<!--컨텐츠 시작 지도 시작-->
<!--지도시작-->
<div id="wrapper">
    <div id="mapView">
        <div class="mapPlaceholder"><span class="fa fa-spin fa-spinner"></span> 지도를 불러오는 중입니다..</div>
    </div>
<!--지도끝-->
    
    <!--오른쪽 사이드바 시작-->
    <div id="content">
        <div class="filter">
            <h1 class="osLight"> 검색 필터 </h1>
            <a href="#" class="handleFilter"><span class="icon-equalizer"></span></a>
            <div class="clearfix"></div>
            
            <!--공연 장르 필터 시작-->
            <form class="filterForm">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 formItem">
                        <div class="formField">
                            <label>공연 카테고리</label>
                            <!--공연카테고리 토글다운 시작-->
                            <a href="#" data-toggle="dropdown" class="btn btn-gray dropdown-btn dropdown-toggle propTypeSelect">
                                <span class="dropdown-label">모두 보기</span>
                                <span class="fa fa-angle-down dsArrow"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-select full" role="menu">
                                <li class="active"><input type="radio" name="pType" checked="checked"><a href="#">모두 보기</a></li>
                                <li><input type="radio" name="pType"><a href="#"></a>뮤지컬</li>
                                <li><input type="radio" name="pType"><a href="#"></a>연극</li>
                                <li><input type="radio" name="pType"><a href="#"></a>콘서트</li>
                                <li><input type="radio" name="pType"><a href="#"></a>클래식 무용</li>
                                <li><input type="radio" name="pType"><a href="#"></a>전시</li>
                                <li><input type="radio" name="pType"><a href="#"></a>스포츠</li>
                                <li><input type="radio" name="pType"><a href="#"></a>버스킹</li>
                                <li><input type="radio" name="pType"><a href="#"></a>아마추어 동아리</li>
                                <li><input type="radio" name="pType"><a href="#"></a>기타</li>
                            <!--공연카테고리 토글다운 끝-->
                            </ul>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!--공연장르 필터 끝-->
        
        
        <!--오른쪽 사진과 짤막한 공연정보 사이드바-->
        <div class="resultsList">
            <div class="row">
                <% @articles.reverse.each do |x| %>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <a href="/culture/single/<%= x.id %>" class="card">
                        
                        <div class="figure">
                            <img src="<%= x.pf_image %>" alt="image" width="200px" height="200px">
                            <div class="figView"><span class="icon-eye"></span></div>
                            <div class="figType">공연 중</div>
                        </div>
                        <h2><%= x.pf_title %></h2>
                        
                        <div class="cardAddress"><span class="icon-pointer">  </span><%= x.pf_date %>  </span><%= x.pf_time %> </div>
                        <div class="cardAddress"><span class="icon-pointer">  </span><%= x.pf_address_sub %> </div>
                        <div class="cardAddress"><span class="icon-pointer">  </span><%= x.pf_add_br %> </div>
                        <div class="cardAddress"><%= x.musical %>  <%= x.play %>  <%= x.concert %> <%= x.classic %> <%= x.jeonsi %> <%= x.sport %> <%= x.busking %> <%= x.amateur %> <%= x.etc %></div>

                        <!--별점-->
                        <div class="cardRating">
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star-o"></span>
                            <!--댓글수 -->
                            (146) 
                        </div>
                        <div class="clearfix"></div>
                    </a>
                </div>
                <% end %>
            </div>
            <!--오른쪽 사이드바 공연 사진 설명 끝-->
            
            <!--오른쪽 사이드바 밑에 페이지 번호 -->
            <ul class="pagination">
                <li class="disabled"><a href="#"><span class="fa fa-angle-left"></span></a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#"><span class="fa fa-angle-right"></span></a></li>
            </ul>
            <!--오른쪽 사이드바 밑에 페이지 번호 끝-->
        </div>
    </div>
    <div class="clearfix"></div>
</div>
<!--오른쪽 사이드바 끝-->
    

<script src="/js/jquery.slimscroll.min.js"></script>
<script src="/js/jquery-ui.min.js"></script>
<script src="/js/jquery-ui-touch-punch.js"></script>
<script src="/js/jquery.placeholder.js"></script>
<script src="/js/jquery.touchSwipe.min.js"></script>
<script src="/js/jquery.tagsinput.min.js"></script>
<script src="/js/bootstrap-datepicker.js"></script>
<script>
    <%= render :partial => 'culture/js/app.js' %>
</script>